        <div class="dropdown template_select">
              <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Select Template
              <span class="caret"></span></button>
              <ul class="dropdown-menu">
                <li><a href="../edm/0">New Template</a></li>
                <% EmailTemplate.all.each do |template|%>
                    <li><a href=<%="../edm/" + template.id.to_s%>><%=template.email_name=%></a></li>
                <% end %>
              </ul>
        </div>
        
        <div class="template">
            <%= form_for @email_template, url: {action: "update_template"}, html: {:method=>"post",:multipart=>"true",:remote=>"true"} do |f| %>
              <input type="text" hidden="hidden" id="email_template_id" name="email_template_id" value=<%= params[:id] %>>

               <div class="template_header">
                    <div class="template_header_title"><h3><%=@email_template.email_name%></h3></div>
                    <%= f.text_field :email_name, :class => "form-control template_header_input", :style=> "display:none"%>
               </div>

               <div class="template_buttons">
                    <div class="btn-group html_mode">
                      <button type="button" class="btn btn-info btn_template_preview">Preview</button>
                      <button type="button" class="btn btn-info btn_template_html">HTML</button>
                      <button type="button" class="btn btn-info btn_template_split">Split</button>
                    </div>
                </div>
              
              <%= f.text_area :email_html, :class => "form-control text_template_html", :id=>"txt1"%>
              <div id="div1" name="div1" class="orm-control text_template_preview"></div>
              
              <%= f.submit :class => "btn btn-default btn-block btn-success btn_save_template",:value=>"Apply"%>
            <%end%>
    </div>


    <div class="file_upload">
        <FORM METHOD=POST ENCTYPE="multipart/form-data" method="post">
            <div class="form-group">
                <div class="file_upload_header">
                    <h3>File to upload:</h3>
                </div>
                <div class="row">
                    <div class="col-lg-8"><INPUT TYPE=FILE NAME="upfile" class="form-control" ></div>
                    <div class="col-lg-4"><INPUT TYPE=SUBMIT VALUE="Submit" class="form-control btn-info" ></div>
                </div>
            </div>
        </FORM>
    </div>

  </div>

  <script type="text/javascript">
    SetUpEDM();
